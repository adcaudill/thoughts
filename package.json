{
    "name": "thoughts",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:watch": "vite build --watch",
        "dev:local": "concurrently \"npm run build:watch\" \"npx wrangler dev --local\"",
        "preview": "vite preview",
        "worker:dev": "wrangler dev --local --remote",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint --ext .ts,.tsx .",
        "test:watch": "vitest --watch",
        "fmt": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "db:migrate": "wrangler d1 migrations apply thoughts --local",
        "db:migrate:preview": "wrangler d1 migrations apply thoughts --preview --remote",
        "db:migrate:prod": "wrangler d1 migrations apply thoughts --remote"
    },
    "dependencies": {
        "@codemirror/lang-markdown": "^6.3.4",
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@mui/material": "^5.14.0",
        "@uiw/react-codemirror": "^4.25.1",
        "argon2-browser": "^1.16.0",
        "better-sqlite3": "^12.2.0",
        "itty-router": "^5.0.22",
        "libsodium-wrappers-sumo": "^0.7.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^10.1.0",
        "text-readability": "^1.1.1",
        "uuid": "^11.1.0",
        "wrangler": "^4.32.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.21",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "@vitejs/plugin-react": "^5.0.1",
        "autoprefixer": "^10.4.14",
        "concurrently": "^9.2.0",
        "eslint": "^8.50.0",
        "jsdom": "^26.1.0",
        "playwright": "^1.40.0",
        "postcss": "^8.4.24",
        "prettier": "^3.6.2",
        "tailwindcss": "^4.1.12",
        "typescript": "^5.5.2",
        "vite": "^7.1.3",
        "vitest": "^3.2.4"
    }
}
